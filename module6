#include <stdio.h>

// voids do not need to return a value
void getgrade(int* grade);
void calcAverage(int grades[]);
int findLowest(int grades[]);

int main() {
    int grades[5];

    // getting five test grades from the user
    for (int i = 0; i < 5; i++) {
        printf("enter test grade %d\n", i + 1);
        getgrade(&grades[i]);
    }
    // calculate and display the average of the 4 kept grades
    calcAverage(grades);

    return 0;
}


// gathering grades from the user
void getgrade(int* grade) {
    do {
        scanf_s("%d", grade);
        if (*grade < 0 || *grade > 100) {
            printf("Please enter a grade between 0 and 100\n");
        }
    } while (*grade < 0 || *grade > 100);
}



// taking the grades from the user and eleminating the lowest number
void calcAverage(int grades[]) {
    int lowestNum = findLowest(grades);
    int sum = 0;

    //calculating the sum of the 4 highest grades
    for (int i = 0; i < 5; i++) {
        if (i != lowestNum) {
            sum += grades[i];
        }
    }
    //calculating and displaying the avg
    float average = (float)sum / 4;

    printf("The average of the four highest grades is: %.2f\n", average);
}





int findLowest(int grades[]) {
    int lowestNum = 0;
    for (int i = 1; i < 5; i++) {
        if (grades[i] < grades[lowestNum]) {
            lowestNum = i;
        }
    }

    return 0;
}
